<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="fontFamily">@font/fira_sans</item>


    </style>

    <!--Bottom Nav Bar-->
    <style name="CustomBottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextAppearanceActive">?attr/colorAccent</item>
        <item name="android:background">@color/navBarBottom</item>
    </style>

    <!--    Search-Bar   -->
    <style name="CustomSearchBar" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">25dp</item>
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
        <item name="boxCornerRadiusBottomEnd">25dp</item>
        <item name="boxBackgroundColor">@color/colorLightestGray</item>
        <!--        <item name="boxStrokeColor">@color/colorLightestGray</item>-->
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <!--    Custom TextField   -->
    <style name="CustomTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="startIconTint">@color/colorPrimaryDark</item>
        <item name="hintEnabled">false</item>
    </style>

    <!--    Custom Edittext-->
    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingStart">@dimen/custom_edt_dimen</item>
        <item name="android:paddingEnd">@dimen/common_padding_24</item>
        <item name="android:textColor">@color/colorEditText</item>
        <item name="android:singleLine">true</item>
        <item name="android:textDirection">locale</item>
    </style>

    <!--EditText hint       //should be applied on textview-->
    <style name="EditTextHint">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="layout_constraintHorizontal_bias">0.15</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@color/colorWhite</item>
<!--        <item name="android:translationZ">0.01dp</item>-->
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>

    </style>

    <!--    Custom EditText for name field              //First Name-->
    <style name="CustomEditTextFirstName" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">@dimen/common_margin_32</item>
        <item name="android:textColor">@color/colorEditText</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">start</item>
    </style>

    <!--    Custom EditText for name field          //Last Name-->
    <style name="CustomEditTextLastName" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginEnd">@dimen/common_margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorEditText</item>
        <item name="android:gravity">start</item>
    </style>


    <!--Circular image view-->
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--Rating Bar style-->
    <style name="GradientRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:isIndicator">false</item>
    </style>

    <!--Outlined Button uncolored-->
    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">25dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:letterSpacing">0</item>


        <!--        <item name="background">@drawable/sign_btn_gradient</item>-->
    </style>

    <!--Outlined Button colored-->
    <style name="GradientButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">25dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@drawable/sign_btn_gradient</item>
        <item name="backgroundTint">@null</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!--    Outline Button toolbar-->
    <style name="OutlinedButtonToolbar" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="strokeColor">@color/colorOnPrimary</item>
        <item name="android:letterSpacing">0</item>

        <!--        <item name="background">@drawable/sign_btn_gradient</item>-->
    </style>

    <!--Outlined Button uncolored Normal-->
    <style name="OutlinedButtonNormal" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">25dp</item>
        <item name="android:paddingStart">@dimen/margin_10</item>
        <item name="android:paddingEnd">@dimen/margin_10</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:letterSpacing">0</item>
        <!--        <item name="background">@drawable/sign_btn_gradient</item>-->
    </style>



    <!--Chip style text view-->
    <style name="ChipStyleTextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/chip_style_background</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/textColorHeadline</item>
    </style>


    <style name="circleImageViewProfile" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
    </style>


    <style name="SettingsStyle">
        <item name="android:paddingTop">@dimen/common_padding_24</item>
        <item name="android:paddingBottom">@dimen/common_padding_24</item>
        <item name="android:paddingStart">@dimen/common_padding_24</item>
        <item name="android:paddingEnd">@dimen/common_padding_24</item>
    </style>


    <style name="Headline7" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.MyApp.Headline3" parent="TextAppearance.MaterialComponents.Headline3">

        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:letterSpacing">0</item>

    </style>


    <style name="TextAppearance.MyApp.Headline5" parent="TextAppearance.MaterialComponents.Headline5">

        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:letterSpacing">0</item>

    </style>

    <style name="TextAppearance.MyApp.Headline5_bold" parent="TextAppearance.MaterialComponents.Headline5">

        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:letterSpacing">0</item>

    </style>


    <style name="TextAppearance.MyApp.Headline3_Profile_Normal" parent="TextAppearance.MaterialComponents.Headline3">

        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/colorGrayLight</item>
        <item name="android:letterSpacing">0</item>

    </style>

    <style name="TextAppearance.MyApp.Headline3_Profile_Large" parent="TextAppearance.MaterialComponents.Headline3">

        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/colorGrayLight</item>
        <item name="android:letterSpacing">0</item>

    </style>


    <style name="TextAppearance.MyApp.Headline3_Profile_Normal_Dark" parent="TextAppearance.MaterialComponents.Headline3">

        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/textColorHeadline</item>
        <item name="android:letterSpacing">0</item>

    </style>


    <style name="TextAppearance.MyApp.Headline3_Profile_Bold" parent="TextAppearance.MaterialComponents.Headline3">

        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:letterSpacing">0</item>

    </style>


    <style name="TextAppearance.MyApp.Headline3_Setting_Normal" parent="TextAppearance.MaterialComponents.Headline3">

        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:textColor">@color/colorPrimarySub</item>
        <item name="android:letterSpacing">0</item>

    </style>
    
    


    <style name="button_overlay">
        <item name="colorSurface">@android:color/white</item>
    </style>

    <style name="SelectorTheme" parent="@style/Theme.MaterialComponents" />


    <style name="ShapeAppearance.MyApp.MediumComponent" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>

    </style>

    <style name="ShapeAppearanceOverlay.FloatingActionButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@null</item>
    </style>

</resources>