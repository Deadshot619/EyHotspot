<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5"
    android:background="@drawable/rounded_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_10"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal"
            android:weightSum="3">


            <TextView
                style="@style/TextAppearance.MyApp.Headline3_Profile_Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:text="D-Zone Wifi" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_20"
                android:layout_weight="1.25"
                android:src="@drawable/ic_fill_heart" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_20"
                android:layout_weight="1.25"
                android:src="@drawable/ic_group" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvOwenerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:text="RIYADH" />

            <TextView
                android:id="@+id/tvStreetAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Olya St,Akaria Mall, Food Court,Riyadh 12244" />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@color/colorGrayLight" />


            <TextView
                android:id="@+id/tvVia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="via Al Urubah Rd Arrival arround" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ivShareIT"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_30"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/baseline_share_24" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btNavigate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/sign_btn_gradient"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:text="@string/navigate_label"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_15" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>