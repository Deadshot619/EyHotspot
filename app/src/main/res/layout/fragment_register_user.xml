<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.registration.register_user.RegisterUserFragment">

            <!--First Name label-->
            <TextView
                android:id="@+id/tv_first_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_margin_start"
                android:layout_marginTop="@dimen/common_margin_top"
                android:layout_marginEnd="@dimen/common_margin_end"
                android:text="@string/first_name_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--First Name input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/first_name_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_between_fields"
                android:layout_marginEnd="@dimen/common_margin_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_first_name_label"
                app:layout_constraintTop_toBottomOf="@id/tv_first_name_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>


            <!--Last Name label-->
            <TextView
                android:id="@+id/tv_last_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:text="@string/last_name_label"
                app:layout_constraintEnd_toEndOf="@id/first_name_input_layout"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/first_name_input_layout"
                app:layout_constraintTop_toBottomOf="@id/first_name_input_layout" />

            <!--Last Name input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_name_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_between_fields"
                android:layout_marginEnd="@dimen/common_margin_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_last_name_label"
                app:layout_constraintTop_toBottomOf="@id/tv_last_name_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--Email Id label-->
            <TextView
                android:id="@+id/tv_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:text="@string/email_id_label"
                app:layout_constraintEnd_toEndOf="@id/last_name_input_layout"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/last_name_input_layout"
                app:layout_constraintTop_toBottomOf="@id/last_name_input_layout" />

            <!--Email Id input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_between_fields"
                android:layout_marginEnd="@dimen/common_margin_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_email_label"
                app:layout_constraintTop_toBottomOf="@id/tv_email_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--Mobile Number label-->
            <TextView
                android:id="@+id/tv_mobile_no_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:text="@string/email_id_label"
                app:layout_constraintEnd_toEndOf="@id/email_input_layout"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/email_input_layout"
                app:layout_constraintTop_toBottomOf="@id/email_input_layout" />

            <!--Mobile Number input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mobile_no_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_between_fields"
                android:layout_marginEnd="@dimen/common_margin_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_mobile_no_label"
                app:layout_constraintTop_toBottomOf="@id/tv_mobile_no_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--Password label-->
            <TextView
                android:id="@+id/tv_password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:text="@string/password_label"
                app:layout_constraintEnd_toEndOf="@id/mobile_no_layout"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/mobile_no_layout"
                app:layout_constraintTop_toBottomOf="@id/mobile_no_layout" />

            <!--Password input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_between_fields"
                android:layout_marginEnd="@dimen/common_margin_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_password_label"
                app:layout_constraintTop_toBottomOf="@id/tv_password_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm Password label-->
            <TextView
                android:id="@+id/tv_confirm_password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:text="@string/confirm_password_label"
                app:layout_constraintEnd_toEndOf="@id/password_input_layout"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/password_input_layout"
                app:layout_constraintTop_toBottomOf="@id/password_input_layout" />

            <!-- Confirm Password input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm_password_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_between_fields"
                android:layout_marginEnd="@dimen/common_margin_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_confirm_password_label"
                app:layout_constraintTop_toBottomOf="@id/tv_confirm_password_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Captcha label-->
            <TextView
                android:id="@+id/tv_captcha_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:text="@string/captcha_label"
                app:layout_constraintEnd_toEndOf="@id/confirm_password_input_layout"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/confirm_password_input_layout"
                app:layout_constraintTop_toBottomOf="@id/confirm_password_input_layout" />

            <!-- Captcha input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/captcha_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_between_fields"
                android:layout_marginEnd="@dimen/common_margin_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_captcha_label"
                app:layout_constraintTop_toBottomOf="@id/tv_captcha_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_captcha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--Next-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:text="@string/next_label"
                app:layout_constraintStart_toStartOf="@id/captcha_input_layout"
                app:layout_constraintTop_toBottomOf="@id/captcha_input_layout" />

            <!--Sign In-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:text="@string/sign_in_label"
                app:layout_constraintEnd_toEndOf="@id/captcha_input_layout"
                app:layout_constraintTop_toBottomOf="@id/captcha_input_layout" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>