<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ey.hotspot.ui.registration.register_user.RegisterUserViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.registration.register_user.RegisterUserFragment">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/margin_20" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/margin_20" />


            <!--First Name input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/first_name_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                app:startIconTint="@color/colorPrimarySub"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                app:hintTextColor="@color/colorGrayLight"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toTopOf="parent"
                app:placeholderText="@string/name_label"
                app:startIconDrawable="@drawable/baseline_person_outline_black_36">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/first_last_name_label"
                    android:text="@={viewModel.firstName}" />

            </com.google.android.material.textfield.TextInputLayout>


            <!--Last Name input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_name_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                app:startIconTint="@color/colorPrimarySub"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                app:hintTextColor="@color/colorGrayLight"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/first_name_input_layout"
                app:placeholderText="@string/mobile_number_label"
                app:startIconDrawable="@drawable/baseline_settings_cell_black_36">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_register_mobile"
                    android:text="@={viewModel.lastName}" />

            </com.google.android.material.textfield.TextInputLayout>


            <!--Email Id input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:text="@string/email_id_label"
                app:startIconTint="@color/colorPrimarySub"

                app:hintTextColor="@color/colorGrayLight"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/last_name_input_layout"
                app:placeholderText="@string/email_id_label"
                app:startIconDrawable="@drawable/baseline_email_black_36">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/email_id_hint"
                    android:text="@={viewModel.emailId}" />

            </com.google.android.material.textfield.TextInputLayout>


            <!--Password input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                app:startIconTint="@color/colorPrimarySub"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                app:hintTextColor="@color/colorGrayLight"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/email_input_layout"
                app:placeholderText="@string/password_label"
                app:startIconDrawable="@drawable/baseline_lock_black_36">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_password"
                    android:text="@={viewModel.password}" />

            </com.google.android.material.textfield.TextInputLayout>


            <!-- Confirm Password input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm_password_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                app:hintTextColor="@color/colorGrayLight"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:startIconTint="@color/colorPrimarySub"

                app:layout_constraintTop_toBottomOf="@id/password_input_layout"
                app:placeholderText="@string/confirm_password_label"
                app:startIconDrawable="@drawable/baseline_lock_black_36">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_confirm_password"
                    android:text="@={viewModel.confirmPassword}" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvSignAgree"
                style="@style/TextAppearance.MyApp.Headline3_Profile_Normal_Dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:gravity="center"
                android:text="@string/sign_agree_msg"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/confirm_password_input_layout" />


            <TextView
                android:id="@+id/tvTermsCondition"
                style="@style/TextAppearance.MyApp.Headline3_Profile_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/terms_condition"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/tvSignAgree" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGetStarted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/sign_btn_gradient"
                android:paddingStart="@dimen/margin_60"
                android:paddingTop="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_60"
                android:paddingBottom="@dimen/margin_10"
                android:text="@string/get_started"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_15"
                app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                app:layout_constraintStart_toStartOf="@+id/guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/tvTermsCondition" />


            <LinearLayout
                android:id="@+id/llOR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnGetStarted">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorGrayLight" />

                <TextView
                    style="@style/TextAppearance.MyApp.Headline3_Profile_Normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/or" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorGrayLight" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginBottom="@dimen/margin_20"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/llOR">


                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:layout_gravity="center"
                    android:textDirection="locale"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:src="@drawable/ic_facebook_" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/margin_40"
                    android:layout_height="@dimen/margin_40"
                    android:layout_gravity="center"
                    android:textDirection="locale"

                    android:layout_marginStart="@dimen/margin_10"
                    android:src="@drawable/ic_google_sign_in" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>