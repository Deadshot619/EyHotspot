<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.ey.hotspot.network.response.LocationReviews" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">


        <!--UserName-->
<!--        android:text='@{String.format("%s %s", data.firstname, data.lastname)}'-->

        <TextView
            android:id="@+id/tv_username"
            style="@style/Headline7"
            android:textColor="@color/colorLightGray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textDirection="locale"
            android:text='@{data.fullname}'

            android:layout_marginEnd="@dimen/common_margin"
            app:layout_constraintEnd_toStartOf="@id/tv_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Shakira" />

        <!--    Date    -->
        <TextView
            android:id="@+id/tv_date"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="0dp"
            android:textColor="@color/colorLightGray"
            android:layout_height="wrap_content"
            app:bindExtractDateFromDateTime_DDMMYYYY="@{data.created_at}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_username"
            app:layout_constraintBottom_toBottomOf="@id/tv_username"
            tools:text="2020-2-69" />


        <!--Rating Bar-->
        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/rating_bar"
            style="@style/GradientRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:scaleY="1"
            android:layout_marginTop="@dimen/common_margin_8"
            android:rating="@{data.rating}"
            android:stepSize="1"
            tools:rating="3"
            app:layout_constraintTop_toBottomOf="@id/tv_username"
            app:layout_constraintStart_toStartOf="@id/tv_username"
            />


        <!--Review-->
        <TextView
            android:id="@+id/tv_review"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="0dp"
            android:textColor="@color/colorLightGray"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_between_fields"
            android:textDirection="locale"

            app:bindShowDashWhenTextEmpty="@{data.description}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_username"
            app:layout_constraintTop_toBottomOf="@id/rating_bar"
            tools:text="Osama Bin Laden" />

        <!--        Days Ago-->
        <TextView
            android:id="@+id/tv_days_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="69 days ago"
            android:text="@{data.diff_for_human}"
            app:layout_constraintTop_toBottomOf="@id/tv_review"
            app:layout_constraintStart_toStartOf="@id/tv_review"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>