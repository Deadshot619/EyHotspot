<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.registration.registration_option.RegistrationOptionFragment"
        android:paddingTop="@dimen/common_padding_top"
        android:paddingStart="@dimen/common_padding_start"
        android:paddingEnd="@dimen/common_padding_end">

    <!--    User image  -->
       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/iv_user"
           android:src="@drawable/ic_baseline_person_24"
           android:layout_width="150dp"
           android:layout_height="150dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginTop="@dimen/common_margin_top"/>

<!--        Select verification method-->
        <TextView
            android:id="@+id/tv_select_verification_method_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextAppearance.MyApp.Headline3_Profile_Normal"
            app:layout_constraintTop_toBottomOf="@+id/iv_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/common_margin_top"
            android:text="@string/verification_method_label"/>


        <!--otp on sms-->
        <androidx.appcompat.widget.AppCompatButton
            android:paddingEnd="@dimen/margin_20"
            android:paddingStart="@dimen/margin_20"
            android:background="@drawable/sign_btn_gradient"
            android:id="@+id/btn_otp_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_top"
            android:text="@string/otp_sms_label"
            app:layout_constraintStart_toStartOf="@id/tv_select_verification_method_label"
            app:layout_constraintTop_toBottomOf="@id/tv_select_verification_method_label" />

        <!--Email Link-->
        <androidx.appcompat.widget.AppCompatButton
            android:paddingEnd="@dimen/margin_20"
            android:paddingStart="@dimen/margin_20"
            android:background="@drawable/sign_btn_gradient"
            android:id="@+id/btn_email_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_top"
            android:text="@string/email_link_label"
            app:layout_constraintEnd_toEndOf="@id/tv_select_verification_method_label"
            app:layout_constraintTop_toBottomOf="@id/tv_select_verification_method_label" />

        <!--Sign In-->
        <androidx.appcompat.widget.AppCompatButton
            android:paddingEnd="@dimen/margin_30"
            android:paddingStart="@dimen/margin_30"
            android:background="@drawable/sign_btn_gradient"            android:id="@+id/btn_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_top"
            android:text="@string/sign_in_label"
            android:visibility="gone"
            app:layout_constraintVertical_bias="1"
            android:layout_marginBottom="@dimen/common_margin_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_otp_sms" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>