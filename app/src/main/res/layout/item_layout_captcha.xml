<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--            Captch-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/captcha_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textDirection="locale"
            app:hintEnabled="false"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_captcha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_captcha"
                android:paddingEnd="160dp"
                android:paddingStart="@dimen/common_padding"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:maxEms="10"
                android:textSize="@dimen/text_size_15"
                android:nextFocusForward="@+id/btn_sign_in"
                android:singleLine="true"
                android:textDirection="locale" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_captcha_text"
            android:layout_width="wrap_content"
            android:minWidth="120dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:maxEms="10"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:clickable="false"
            android:cursorVisible="false"
            android:background="@drawable/rectangle_shape"
            android:backgroundTint="@color/colorLightestGray"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:paddingEnd="@dimen/margin_30"
            app:layout_constraintTop_toTopOf="@id/captcha_input_layout"
            app:layout_constraintEnd_toEndOf="@id/captcha_input_layout"
            app:layout_constraintBottom_toBottomOf="@id/captcha_input_layout"
            android:textDirection="locale" />

<!--        Refresh button-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRefreshCaptchaCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/refreashicon"
            android:padding="@dimen/common_padding_8"
            app:layout_constraintTop_toTopOf="@id/captcha_input_layout"
            app:layout_constraintEnd_toEndOf="@id/captcha_input_layout"
            app:layout_constraintBottom_toBottomOf="@id/captcha_input_layout"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>