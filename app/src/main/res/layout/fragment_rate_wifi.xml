<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ey.hotspot.ui.speed_test.rate_wifi.RateWifiViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ey.hotspot.ui.speed_test.rate_wifi.RateWifiFragment">

        <!--Toolbar-->
        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/layout_custom_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/common_padding_24"
        tools:context="com.ey.hotspot.ui.speed_test.raise_complaint.RaiseComplaintFragment">

        <!--Wifi SSid-->
        <TextView
            android:id="@+id/tv_wifi_name"
            style="@style/Headline7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin_24"
            android:text="@{viewModel.rateWifiData.wifiSsid}"
            android:textColor="?attr/colorOnSecondary"
            android:textDirection="locale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="D-Zone Wifi" />

        <!--        Wifi Provider-->
        <TextView
            android:id="@+id/tv_wifi_provider"
            style="@style/ChipStyleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_between_fields_4"
            android:text="@{viewModel.rateWifiData.wifiProvider}"
            android:textColor="?attr/colorOnSecondary"
            app:layout_constraintStart_toStartOf="@id/tv_wifi_name"
            app:layout_constraintTop_toBottomOf="@id/tv_wifi_name"
            tools:text="Amazenet" />

        <!--Wifi Location-->
        <TextView
            android:id="@+id/tv_wifi_location"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_between_fields"
            android:text="@{viewModel.rateWifiData.wifiLocation}"
            android:textAllCaps="true"

            android:textColor="@color/colorGrayLight"
            android:textDirection="locale"
            app:layout_constraintEnd_toEndOf="@id/tv_wifi_name"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/tv_wifi_name"
            app:layout_constraintTop_toBottomOf="@id/tv_wifi_provider"
            tools:text="D-Zone Wifi" />

        <!--Horizontal Line-->
        <View
            android:id="@+id/view_horizontal"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/common_margin_32"
            android:background="@color/colorLightestGray"
            app:layout_constraintEnd_toEndOf="@id/tv_wifi_location"
            app:layout_constraintStart_toStartOf="@id/tv_wifi_location"
            app:layout_constraintTop_toBottomOf="@id/tv_wifi_location" />

        <!--Rating Bar-->
        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/rating_bar"
            style="@style/GradientRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_48"
            android:layout_marginEnd="@dimen/common_margin_48"
            android:layout_marginTop="@dimen/common_margin_32"
            android:layout_marginBottom="@dimen/common_margin_32"
            android:rating="@={viewModel.rateWifiData.rating}"
            android:stepSize="1"
            app:layout_constraintEnd_toEndOf="@id/view_horizontal"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/view_horizontal"
            app:layout_constraintTop_toBottomOf="@id/view_horizontal"
            tools:rating="3" />

        <!--Remarks-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_remarks_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_32"
            android:hint="@string/add_remarks_label"
            app:layout_constraintEnd_toEndOf="@id/view_horizontal"
            app:layout_constraintStart_toStartOf="@id/view_horizontal"
            app:layout_constraintTop_toBottomOf="@id/rating_bar">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:lines="10"
                android:maxLines="15"
                android:minLines="6"
                android:text="@={viewModel.rateWifiData.feedback}" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Cancel button-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_button"
            style="@style/OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_24"
            android:text="@string/cancel_label"
            app:layout_constraintStart_toStartOf="@id/input_remarks_layout"
            app:layout_constraintTop_toBottomOf="@id/input_remarks_layout" />

        <!--Submit Feedback-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit_feedback"
            style="@style/GradientButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="@string/submit_feedback_label"
            app:layout_constraintBottom_toBottomOf="@+id/btn_cancel_button"
            app:layout_constraintEnd_toEndOf="@id/input_remarks_layout"
            app:layout_constraintTop_toTopOf="@+id/btn_cancel_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>