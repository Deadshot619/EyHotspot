<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.ey.hotspot.ui.home.models.GetHotSpotResponse" />

        <variable
            name="clickListener"
            type="com.ey.hotspot.ui.search.searchlist.adapter.SearchListAdapter.OnClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        android:elevation="1dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding">


            <!--    Wifi Ssid   -->
            <TextView
                android:id="@+id/tv_wifi_ssid"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{data.name}"
                android:textColor="@color/colorGrayLight"
                android:textDirection="locale"
                app:layout_constraintEnd_toStartOf="@id/iv_favourites"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="D-zone" />

            <!--heart-->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_favourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_margin_32"
                android:onClick="@{() -> clickListener.onClickAddFavourite(data)}"
                android:src="@drawable/ic_favorite_filled_gray"
                android:textDirection="locale"
                app:bindAddFavourite="@{data.favourite}"
                app:layout_constraintBottom_toBottomOf="@id/iv_flag"
                app:layout_constraintEnd_toStartOf="@id/iv_flag"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@id/tv_wifi_ssid"
                app:layout_constraintTop_toTopOf="@id/iv_flag" />

            <!--Flag-->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> clickListener.onClickReport(data)}"

                android:src="@drawable/ic_group"
                android:textDirection="locale"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Service Provider Name-->
            <TextView
                android:id="@+id/tv_service_provider"
                style="@style/ChipStyleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_between_fields_6"
                android:text="@{data.provider_name}"
                app:layout_constraintStart_toStartOf="@id/tv_wifi_ssid"
                app:layout_constraintTop_toBottomOf="@id/tv_wifi_ssid"
                tools:text="Riyadh" />

            <!--Location-->
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_12"
                android:text="@{data.location}"
                android:textAllCaps="true"
                android:textColor="@color/colorLightGray"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_14"
                app:layout_constraintEnd_toEndOf="@id/iv_flag"
                app:layout_constraintStart_toStartOf="@id/tv_service_provider"
                app:layout_constraintTop_toBottomOf="@id/tv_service_provider"
                tools:text="Mumbai" />

            <!--
                        &lt;!&ndash;Horizontal Line&ndash;&gt;
                        <View
                            android:id="@+id/view_horizontal"
                            android:layout_width="0dp"
                            android:layout_height="0.5dp"
                            android:background="@color/colorLightGray"
                            android:layout_marginTop="@dimen/common_margin_between_fields"
                            app:layout_constraintTop_toBottomOf="@id/tv_location"
                            app:layout_constraintStart_toStartOf="@id/tv_location"
                            app:layout_constraintEnd_toEndOf="@id/tv_location"/>
            -->

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            &lt;!&ndash;    Road to  &ndash;&gt;
                        <TextView
                            android:id="@+id/tv_road_to"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14"
                            android:layout_marginTop="@dimen/common_margin_12"
                            android:layout_marginEnd="@dimen/common_margin"
                            android:textDirection="locale"
                            app:layout_constraintTop_toBottomOf="@id/view_horizontal"
                            app:layout_constraintStart_toStartOf="@id/tv_location"
                            app:layout_constraintEnd_toStartOf="@id/guideline"
                            tools:text="hola hola hola hola hola hola hola hola hola hola hola "
                            />-->

            <!--Share-->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> clickListener.onClickShare(data)}"
                android:src="@drawable/baseline_share_24"
                android:textDirection="locale"
                android:visibility="visible"

                app:layout_constraintBottom_toBottomOf="@id/btn_rate_now"
                app:layout_constraintStart_toStartOf="@id/tv_location"
                app:layout_constraintTop_toTopOf="@id/btn_rate_now" />


            <!--Navigate Now-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_navigate_now"
                style="@style/GradientButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:onClick="@{() -> clickListener.onClickNavigate(data)}"
                android:text="@string/navigate_now_label"
                android:textDirection="locale"

                app:layout_constraintBottom_toBottomOf="@id/btn_rate_now"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_rate_now" />

            <!--Rate Now-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_rate_now"
                style="@style/OutlinedButtonNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_between_fields"
                android:layout_marginEnd="@dimen/common_margin_between_fields"
                android:onClick="@{() -> clickListener.onClickRateNow(data)}"

                android:text="@string/rate_now_label"
                android:textDirection="locale"
                app:layout_constraintEnd_toStartOf="@id/btn_navigate_now"
                app:layout_constraintTop_toBottomOf="@id/tv_location" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</layout>