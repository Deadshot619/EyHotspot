<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ey.hotspot.ui.favourite.FavouriteViewModel" />

        <!--        <variable-->
        <!--            name="viewModel"-->
        <!--            type="com.ey.hotspot.ui.favourite.fragment.FavouriteViewModel" />-->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login_selection.LoginSelectionActivity">


        <!--Toolbar-->
        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/layout_custom_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Toolbar-->
        <include
            android:id="@+id/toolbarLayout_2"
            layout="@layout/layout_custom_toolbar_searchbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarLayout" />

        <!--
                <View
                    android:id="@+id/view_header_shadow"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toBottomOf="@id/toolbarLayout"
                    app:layout_constraintStart_toStartOf="@id/toolbarLayout"
                    app:layout_constraintEnd_toEndOf="@id/toolbarLayout"
                    android:background="@drawable/header_shadow"
                    />
        -->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavouriteWifiList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarLayout_2"
            app:listFavouriteWifiList="@{viewModel.getFavouriteResponse.data}"
            tools:listitem="@layout/item_favourites_list" />

<!--        Empty List Error Text-->
        <TextView
            android:id="@+id/tv_empty_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bindShowTextViewListEmpty="@{viewModel.getFavouriteResponse.data}"
            app:bindShowEmptyListMessage="@{viewModel.getFavouriteResponse.message}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>