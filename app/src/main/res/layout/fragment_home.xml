<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context=".ui.login_selection.LoginSelectionActivity">


        <TextView
            android:id="@+id/tvWelcome"
            style="@style/TextAppearance.MyApp.Headline3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/welcome" />


        <ImageView
            android:id="@+id/iv"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_marginRight="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/ic_launcher_background"
            />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            app:boxBackgroundColor="@color/colorWhite"
            android:hint="@string/userName"
            android:layout_marginRight="@dimen/margin_40"
            android:layout_marginLeft="@dimen/margin_40"
            app:startIconDrawable="@drawable/baseline_person_outline_black_36"
            app:boxCornerRadiusTopStart="@dimen/margin_12"
            app:boxCornerRadiusBottomStart="@dimen/margin_12"
            app:boxCornerRadiusTopEnd="@dimen/margin_12"
            app:boxCornerRadiusBottomEnd="@dimen/margin_12"
            app:hintTextColor="@color/colorGrayLight">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLoginUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:inputType="text"
                android:maxLength="120"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/colorWhite"
            android:hint="@string/userpassword"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_40"
            android:layout_marginLeft="@dimen/margin_40"
            app:startIconDrawable="@drawable/baseline_lock_black_36"
            app:boxCornerRadiusTopStart="@dimen/margin_12"
            app:boxCornerRadiusBottomStart="@dimen/margin_12"
            app:boxCornerRadiusTopEnd="@dimen/margin_12"
            app:boxCornerRadiusBottomEnd="@dimen/margin_12"
            app:hintTextColor="@color/colorGrayLight">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:maxLength="120"
                android:inputType="textPassword"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/captchmsg"
            android:textDirection="locale"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            style="@style/TextAppearance.MyApp.Headline5"/>




        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_10"
            app:boxBackgroundColor="@color/colorWhite"
            android:layout_marginRight="@dimen/margin_40"
            android:layout_marginLeft="@dimen/margin_40"
            app:hintTextColor="@color/colorGrayLight">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etcaptcha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:maxLength="120"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit_button"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_15"
                android:textDirection="locale"
                android:layout_weight="0.8"
                android:layout_marginStart="@dimen/margin_60"
                style="@style/Widget.AppCompat.Button.Colored"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="@string/forgotpassword"
                style="@style/TextAppearance.MyApp.Headline5"
                android:layout_marginStart="@dimen/margin_10"/>




        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_20"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivFacebookSignIn"
                app:srcCompat="@drawable/ic_facebook"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_width="@dimen/iv_size_50"
                android:layout_height="@dimen/iv_size_50"
                app:shapeAppearanceOverlay="@style/circleImageView"/>



            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivGoogleSignIn"
                app:srcCompat="@drawable/ic_google"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_width="@dimen/iv_size_50"
                android:layout_height="@dimen/iv_size_50"
                app:shapeAppearanceOverlay="@style/circleImageView"/>




        </LinearLayout>

    </LinearLayout>

</layout>