<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.ey.hotspot.ui.speed_test.test_result.TestResultsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.speed_test.test_result.TestResultsFragment">

        <!--Upload Speed value-->
        <TextView
            android:id="@+id/tv_upload_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@{``+viewModel.uploadSpeed}"
            app:layout_constraintEnd_toStartOf="@+id/tv_downoad_speed"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="69 mbps" />

        <!--Download Speed value-->
        <TextView
            android:id="@+id/tv_downoad_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{``+viewModel.downloadSpeed}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_upload_speed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_upload_speed"
            app:layout_constraintTop_toTopOf="@+id/tv_upload_speed"
            tools:text="69 mbps" />

        <!--Upload Speed -->
        <TextView
            android:id="@+id/label_upload_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Upload Speed"
            app:layout_constraintEnd_toEndOf="@+id/tv_upload_speed"
            app:layout_constraintStart_toStartOf="@+id/tv_upload_speed"
            app:layout_constraintTop_toBottomOf="@+id/tv_upload_speed" />

        <!--Download Speed -->
        <TextView
            android:id="@+id/label_download_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Download Speed"
            app:layout_constraintEnd_toEndOf="@+id/tv_downoad_speed"
            app:layout_constraintStart_toStartOf="@+id/tv_downoad_speed"
            app:layout_constraintTop_toBottomOf="@+id/tv_downoad_speed" />

        <!--Check Speed-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_check_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Speed"
            android:onClick="@{() -> viewModel.onCheckSpeedClick()}"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_upload_speed"
            />


        <!--    Comment & Evaluate  -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_comment_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_top"
            android:text="@string/comment_and_evaluate_label"
            android:layout_margin="@dimen/common_margin_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <!--    Rate Wifi  -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_top"
            android:text="@string/rate_wifi_label"
            android:layout_margin="@dimen/common_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>