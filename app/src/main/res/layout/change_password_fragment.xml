<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context=".ui.login_selection.LoginSelectionActivity">


        <TextView
            android:id="@+id/tvWelcome"
            style="@style/TextAppearance.MyApp.Headline3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center"
            android:text="@string/change_password" />


        <ImageView
            android:id="@+id/iv"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_40"
            android:layout_marginEnd="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_20"
            android:src="@drawable/ic_launcher_background"
            />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30"
            app:boxBackgroundColor="@color/colorWhite"
            android:hint="@string/newPassword"
            android:layout_marginEnd="@dimen/margin_40"
            android:layout_marginStart="@dimen/margin_40"
            app:startIconDrawable="@drawable/baseline_person_outline_black_36"
            app:boxCornerRadiusTopStart="@dimen/margin_12"
            app:boxCornerRadiusBottomStart="@dimen/margin_12"
            app:boxCornerRadiusTopEnd="@dimen/margin_12"
            app:boxCornerRadiusBottomEnd="@dimen/margin_12"
            app:hintTextColor="@color/colorGrayLight">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLoginUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:inputType="textPassword"
                android:maxLength="120"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/colorWhite"
            android:hint="@string/confirm_password"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginEnd="@dimen/margin_40"
            android:layout_marginStart="@dimen/margin_40"
            app:startIconDrawable="@drawable/baseline_lock_black_36"
            app:boxCornerRadiusTopStart="@dimen/margin_12"
            app:boxCornerRadiusBottomStart="@dimen/margin_12"
            app:boxCornerRadiusTopEnd="@dimen/margin_12"
            app:boxCornerRadiusBottomEnd="@dimen/margin_12"
            app:hintTextColor="@color/colorGrayLight">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:inputType="textPassword"
                android:maxLength="120"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>





            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit_button"
                android:layout_marginTop="@dimen/margin_30"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_15"
                android:layout_gravity="center"
                android:gravity="center"
                android:textDirection="locale"
                style="@style/Widget.AppCompat.Button.Colored"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_back_login_screen"
                style="@style/TextAppearance.MyApp.Headline5_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/back_to_login_msg" />

        </RelativeLayout>


    </LinearLayout>

</layout>