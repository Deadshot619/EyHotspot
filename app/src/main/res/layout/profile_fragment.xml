<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.ey.hotspot.ui.profile.fragment.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Toolbar-->
        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/layout_custom_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!--First Name-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbarLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/CustomTextField"
            android:hint="@string/first_name_label"
            app:startIconDrawable="@drawable/ic_baseline_person_24"
            android:layout_margin="@dimen/common_margin_24">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/colorEditText"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--Last Name-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/input_first_name"
            app:layout_constraintStart_toStartOf="@id/input_first_name"
            app:layout_constraintEnd_toEndOf="@id/input_first_name"
            style="@style/CustomTextField"
            android:hint="@string/last_name_label"
            app:startIconDrawable="@drawable/ic_baseline_person_24"
            android:layout_marginTop="@dimen/common_margin_24">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/colorEditText"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--Mobile No-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_mobile_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/input_last_name"
            app:layout_constraintStart_toStartOf="@id/input_last_name"
            app:layout_constraintEnd_toEndOf="@id/input_last_name"
            style="@style/CustomTextField"
            android:hint="@string/mobile_number_label"
            app:startIconDrawable="@drawable/ic_sharp_phone_iphone_24"
            android:layout_marginTop="@dimen/common_margin_24">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/colorEditText"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--Email Id-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_email_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/input_mobile_no"
            app:layout_constraintStart_toStartOf="@id/input_mobile_no"
            app:layout_constraintEnd_toEndOf="@id/input_mobile_no"
            style="@style/CustomTextField"
            android:hint="@string/email_id_label"
            app:startIconDrawable="@drawable/ic_outline_email_24"
            android:layout_marginTop="@dimen/common_margin_24">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/colorEditText"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--Update Profile-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update_profile"
            style="@style/GradientButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_profile_label"
            app:layout_constraintHorizontal_bias="0.5"
            android:textSize="@dimen/text_size_14"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            app:layout_constraintTop_toBottomOf="@id/input_email_id"
            app:layout_constraintEnd_toEndOf="@id/input_email_id"
            android:layout_marginTop="@dimen/common_margin_24"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>